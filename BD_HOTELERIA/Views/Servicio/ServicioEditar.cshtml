@model BD_HOTELERIA.Models.Servicio

@{
    ViewData["Title"] = "ServicioEditar";
}

<h1>Servicio Editar</h1>

<hr />
<form asp-action="ServicioEditar" class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group col-12">
        <input asp-for="IdServicio" type="hidden" />
        <input asp-for="Eliminado" type="hidden" />
        <label asp-for="IdTipoServicio" class="control-label">Tipo</label>
        <select asp-for="IdTipoServicio" class ="form-control" asp-items="ViewBag.TIPOSERVICIOS"></select>
    </div>
    <div class="form-group col-12">
        <label asp-for="Descripcion" class="control-label">Descripcion</label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group col-12">
        <label asp-for="Precio" class="control-label">Precio</label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="form-group col-12">
        <div class="row">
            <div class="col-12 d-flex justify-content-between my-2">
                <a asp-action="ServicioListado" class="btn btn-outline-secondary">Regresar</a>
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<br />
@if (!(ViewBag.MENSAJE == ""))
{ 
        <div class="alert alert-info">
        @ViewBag.MENSAJE
        </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}